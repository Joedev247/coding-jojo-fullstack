# Instructor Verification Environment Variables
# Add these to your .env file for the verification system to work properly

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
EMAIL_FROM=noreply@codingjojo.com
EMAIL_FROM_NAME="Coding Jojo"
ADMIN_EMAIL=admin@codingjojo.com

# SMTP Configuration (choose one)
# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Or SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Or Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain

# ==============================================
# SMS SERVICE CONFIGURATION
# ==============================================
# Choose your SMS provider: twilio, nexmo, infobip, local
SMS_PROVIDER=twilio

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Nexmo/Vonage Configuration
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret
NEXMO_FROM_NAME=CodingJojo

# Infobip Configuration
INFOBIP_API_KEY=your-infobip-api-key
INFOBIP_BASE_URL=https://api.infobip.com
INFOBIP_FROM_NUMBER=CodingJojo

# Local SMS Provider Configuration (for Cameroon providers)
LOCAL_SMS_API_KEY=your-local-sms-api-key
LOCAL_SMS_API_SECRET=your-local-sms-api-secret
LOCAL_SMS_BASE_URL=https://your-local-sms-provider.com/api
LOCAL_SMS_FROM_NAME=CodingJojo

# ==============================================
# CLOUDINARY CONFIGURATION (for file uploads)
# ==============================================
CLOUDINARY_CLOUD_NAME=djwftm95t
CLOUDINARY_API_KEY=233144845846683
CLOUDINARY_API_SECRET=jRTf0_LmJgdTgCFaXRelkb_VIy0

# ==============================================
# FRONTEND URL (for email links)
# ==============================================
FRONTEND_URL=http://localhost:3000

# ==============================================
# JWT CONFIGURATION
# ==============================================
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRE=30d

# ==============================================
# MONGODB CONFIGURATION
# ==============================================
MONGO_URI=mongodb://localhost:27017/coding-jojo
# or for MongoDB Atlas:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/coding-jojo

# ==============================================
# NODE ENVIRONMENT
# ==============================================
NODE_ENV=development
# Set to 'production' in production environment

# ==============================================
# RATE LIMITING (optional)
# ==============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# ==============================================
# SECURITY SETTINGS
# ==============================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
CORS_ORIGIN=http://localhost:3000

# ==============================================
# FILE UPLOAD LIMITS
# ==============================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_FILES_PER_REQUEST=5

# ==============================================
# VERIFICATION SETTINGS
# ==============================================
VERIFICATION_CODE_EXPIRY_MINUTES=10
MAX_VERIFICATION_ATTEMPTS=3
VERIFICATION_RATE_LIMIT_MINUTES=2

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==============================================
# REDIS CONFIGURATION (optional, for caching)
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ==============================================
# WEBHOOK SETTINGS (optional)
# ==============================================
WEBHOOK_SECRET=your-webhook-secret

# ==============================================
# MONITORING (optional)
# ==============================================
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# ==============================================
# SOCIAL AUTH (optional)
# ==============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
